<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/video_play_heigh" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/video_play_heigh"
        android:background="@color/slide_color"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity" >

        <RelativeLayout
            android:id="@+id/icon"
            android:layout_width="110dp"
            android:layout_height="110dp" >

            <in.srain.cube.image.CubeImageView
                android:id="@+id/lightordark"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_light" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_dark"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sreen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Hi,朋友 ! "
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/totalday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="您已经在这里待了100天了 !"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>